<Window x:Class="ConvertersWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConvertersWpfApp"
        xmlns:converters="clr-namespace:ConvertersWpfApp.Converters"
        mc:Ignorable="d"
        Title="RGB calculator" Height="450" Width="800"
        Name="thisWindows">
    <Window.Resources>
        <converters:ColorComponentToColorSaturationPrecentageConverter x:Key="ColorComponentToColorSaturationPrecentageConverter"/>
        <converters:DoublesToColorConverter x:Key="DoublesToColorConverter"/>
    </Window.Resources>
    <StackPanel>
        <StackPanel.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF595182" Offset="1"/>
                <GradientStop Color="#FFA7671A" Offset="0"/>
            </LinearGradientBrush>
        </StackPanel.Background>
        <WrapPanel>
            <TextBlock Text="Red:" FontSize="20" FontWeight="Bold" Width="100"/>
            <Slider Width="200"
                    Minimum="0"
                    Maximum="255"
                    Value="{Binding ElementName=thisWindows,Path=RedComponent}"
                    TickFrequency="1"
                    TickPlacement="None"
                    IsSnapToTickEnabled="True"/>

            <TextBlock Text="{Binding ElementName=thisWindows
                             ,Path=RedComponent
                             ,StringFormat=Wartość koloru: {0}}"/>
            <TextBlock Text="{Binding ElementName=thisWindows
                             ,Path=RedComponent
                             ,StringFormat=  Procent nasycenia: {0} %
                             ,Converter={StaticResource ColorComponentToColorSaturationPrecentageConverter}}"/>
        </WrapPanel>
        <WrapPanel>
            <TextBlock Text="Green:" FontSize="20" FontWeight="Bold" Width="100"/>
            <Slider Width="200"
                    Minimum="0"
                    Maximum="255"
                    Value="{Binding ElementName=thisWindows,Path=GreenComponent}"
                    TickFrequency="1"
                    TickPlacement="None"
                    IsSnapToTickEnabled="True"/>

            <TextBlock Text="{Binding ElementName=thisWindows
                 ,Path=GreenComponent
                 ,StringFormat=Wartość koloru: {0}}"/>
            <TextBlock Text="{Binding ElementName=thisWindows
                 ,Path=GreenComponent
                 ,StringFormat=  Procent nasycenia: {0} %
                 ,Converter={StaticResource ColorComponentToColorSaturationPrecentageConverter}}"/>
        </WrapPanel>
        <WrapPanel>
            <TextBlock Text="Blue:" FontSize="20" FontWeight="Bold" Width="100"/>
            <Slider Width="200"
                    Minimum="0"
                    Maximum="255"
                    Value="{Binding ElementName=thisWindows,Path=BlueComponent}"
                    TickFrequency="1"
                    TickPlacement="None"
                    IsSnapToTickEnabled="True"/>

            <TextBlock Text="{Binding ElementName=thisWindows
                 ,Path=BlueComponent
                 ,StringFormat=Wartość koloru: {0}}"/>
            <TextBlock Text="{Binding ElementName=thisWindows
                 ,Path=BlueComponent
                 ,StringFormat=  Procent nasycenia: {0} %
                 ,Converter={StaticResource ColorComponentToColorSaturationPrecentageConverter}}"/>
        </WrapPanel>
        <Button Content="Ustaw kolor czerwony" Margin="20" Click="Button_Click"/>
        <Rectangle Width="100" Height="100">
            <Rectangle.Fill>
                <MultiBinding Converter="{StaticResource DoublesToColorConverter}" >
                    <Binding ElementName="thisWindows" Path="RedComponent" Mode="OneWay"/>
                    <Binding ElementName="thisWindows" Path="GreenComponent" Mode="OneWay"/>
                    <Binding ElementName="thisWindows" Path="BlueComponent" Mode="OneWay"/>
                </MultiBinding>
            </Rectangle.Fill>
        </Rectangle>
    </StackPanel>
</Window>
