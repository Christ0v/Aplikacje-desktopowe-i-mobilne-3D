<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp.MainPage">

    <StackLayout>

        <Label Text="Rejestruj konto" 
                   TextColor="White" 
                   FontSize="36" 
                   BackgroundColor="Teal"/>
        <Label Text="Podaj e-mail:" 
               FontSize="16"  />
        <Entry x:Name = "entryEmail" Text="" Placeholder="email"/>
        
        <Label Text="Podaj hasło:" 
               FontSize="16" 
                />
        <Entry IsPassword="True" 
               x:Name="entryPassword"/>
        
        <Label Text="Powtórz hasło:" 
               FontSize="16" 
                />
        <Entry IsPassword="True" 
               x:Name="entryConfirmPassword"/>
        
        <Button Text="ZATWIERDŹ" 
                x:Name="buttonAccept" 
                HorizontalOptions="Center" 
                Clicked="buttonAccept_Clicked"/>
        
        <Label x:Name="labelResult" 
               HorizontalTextAlignment="Center"
               Text="Autor: Krzysztof Pająk"/>

    </StackLayout>

</ContentPage>
